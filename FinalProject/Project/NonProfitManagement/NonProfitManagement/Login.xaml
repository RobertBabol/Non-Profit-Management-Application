        <TextBox x:Name="txtMemberID" HorizontalAlignment="Left" Height="22" Margin="483,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="266"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="22" Margin="483,254,0,0"  VerticalAlignment="Top" Width="266" />
        <Label x:Name="lblLoginError" HorizontalContentAlignment="Center" Content="" HorizontalAlignment="Left" Height="102" Margin="124,53,0,0" VerticalAlignment="Top" Width="839" Foreground="Red" FontSize="24" />
